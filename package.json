{
  "name": "root",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "init": "npm run install",
    "install": "npm install --workspaces",
    "dev:vite": "cd apps/vite && npm run dev",
    "build:vite": "cd apps/vite && npm run build",
    "lint:vite": "cd apps/vite && npm run lint",
    "format:vite": "cd apps/vite && npm run format",
    "storybook": "cd apps/vite && npm run storybook",
    "dev:server": "cd apps/server && npm run dev",
    "build:server": "cd apps/server && npm run build",
    "start:server": "cd apps/server && npm run start",
    "lint:server": "cd apps/server && npm run lint",
    "format:server": "cd apps/server && npm run format",
    "test:server": "cd apps/server && npm run test",
    "dev:next": "cd apps/next && npm run dev",
    "build:next": "cd apps/next && npm run build",
    "start:next": "cd apps/next && npm run start",
    "lint:next": "cd apps/next && npm run lint"
  },
  "dependencies": {
    "copyfiles": "^2.4.1"
  }
}
